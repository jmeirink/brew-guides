<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>Brew Guides</h1>
  <% if (user) { %>
   <h2>Add a Brewguide!</h2>
   <form action="/brewguides" method="POST">
    
    <!-- Brewguide Name -->
    <label>
      Name:
      <input type="text" name="name" autocomplete="off">
    </label>

    <!-- Brew Device -->
    <label for="brewdevice-select">Brew Device:</label>
    <select name="brewdevice">
      <option value="V60">V60</option>
      <option value="Chemex">Chemex</option>
      <option value="Kalita">Kalita</option>
      <option value="Aeropress">Aeropress</option>
    </select>

    <!-- Grind Size -->
    <label for="grindsize-select">Grind Size:</label>
    <select name="grindsize">
      <option value="Course">Course</option>
      <option value="Medium">Medium</option>
      <option value="Fine">Fine</option>
      <option value="Extra Fine">Extra Fine</option>
    </select>

    <!-- Ground Coffee -->
    <label>
      Ground Coffee:
      <!-- might wanna change this to a text input with a syntax suggestion -->
      <input type="number" name="groundcoffee" autocomplete="off">
    </label>

    <!-- Water Temp -->
    <label>
      Water Temp:
      <!-- might wanna change this to a text input with a syntax suggestion -->
      <input type="number" name="watertemp" autocomplete="off">
    </label>

    <!-- Brew Time -->
    <label>
      Brew Time:
      <!-- might wanna change this to a text input with a syntax suggestion -->
      <input type="number" name="brewtime" autocomplete="off">
    </label>

   </form>
  <% } %>
	<ul>
  <!-- I am getting brewguides from the res.render of the index function in the brewguides controller -->
  <% brewguides.forEach(brewguide => { %>
    <li><%= brewguide.name %></li>
  <% }) %>
  </ul>
</section>

<%- include('../partials/footer') %>