<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>Brew Guides</h1>
  <% if (user) { %>
   <h3>Add a brew guide</h3>
   <br>
   <form action="/brewguides" method="POST">
    
    <div>
      <label>
        Name:
        <input type="text" name="name" placeholder="Brewguide name" autocomplete="off">
      </label>
    </div>

    <div>
      <label for="brewdevice-select">Brew Device:</label>
      <select name="brewdevice">
        <option value="V60">V60</option>
        <option value="Chemex">Chemex</option>
        <option value="Kalita">Kalita</option>
        <option value="French Press">French Press</option>
        <option value="Aeropress">Aeropress</option>
        <option value="MokaPot">MokaPot</option>
      </select>
    </div>

    <div>
      <label for="grindsize-select">Grind Size:</label>
      <select name="grindsize">
        <option value="Course">Course</option>
        <option value="Medium Course">Medium Course</option>
        <option value="Medium">Medium</option>
        <option value="Fine">Fine</option>
        <option value="Extra Fine">Extra Fine</option>
      </select>
    </div>

    <div>
      <label>
        Ground Coffee:
        <input type="text" name="gramsofcoffee" placeholder="25 grams" autocomplete="off">
      </label>
    </div>

    <div>
      <label>
        Total Water:
        <input type="text" name="totalwater" placeholder="400 grams" autocomplete="off">
      </label>
    </div>

    <div>
      <label>
        Water Temp:
        <input type="text" name="watertemp" placeholder="205 F" autocomplete="off">
      </label>
    </div>

    <div>
      <label>
        Brew Time:
        <input type="text" name="brewtime" placeholder="2:30" autocomplete="off">
      </label>
    </div>

    <br>

    <div>
      <button type="submit" class="btn btn-secondary">Add</button>
    </div>

   </form>
  <% } %>
</section>

<%- include('../partials/footer') %>